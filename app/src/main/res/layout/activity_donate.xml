<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.AppBarLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button
            android:id="@id/btn_donate_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1$" />
        <Button
            android:id="@id/btn_donate_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2$" />
        <Button
            android:id="@id/btn_donate_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3$" />
        <Button
            android:id="@id/btn_donate_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4$" />
        <Button
            android:id="@id/btn_donate_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5$" />
        <TextView
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="?colorAccent"
            android:gravity="center"
            android:padding="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/thank_you_for_your_support_for_open_source_software" />
    </LinearLayout>
</LinearLayout>