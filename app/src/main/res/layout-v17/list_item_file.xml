<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="2.0dip"
    android:paddingBottom="2.0dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/buttonsContainer"
        android:layout_toStartOf="@id/buttonsContainer">
        <android.support.v7.widget.AppCompatImageView
            android:id="@id/img_arrow"
            android:layout_width="18.0dip"
            android:layout_height="24.0dip"
            android:tint="@color/dark.color_folder"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_white_24dp" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@id/img_icon"
            android:layout_width="18.0dip"
            android:layout_height="24.0dip"
            app:srcCompat="@drawable/ic_jar_file_white" />
        <android.support.v7.widget.AppCompatTextView
            android:textSize="12.0sp"
            android:textColor="@color/dark.color_folder"
            android:gravity="center_vertical"
            android:id="@id/node_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/buttonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <android.support.v7.widget.AppCompatImageView
            android:id="@id/img_add"
            android:background="?selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            app:srcCompat="@drawable/ic_add_white_24dp" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@id/img_delete"
            android:background="?selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            app:srcCompat="@drawable/ic_close_white_24dp" />
    </LinearLayout>
</RelativeLayout>